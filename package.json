{
  "name": "express-project-structure",
  "version": "1.0.0",
  "description": "Starter template for Express.js apps with structured folders",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "dotenv -e .env.dev -- nodemon --exec node src/server.js",
    "start": "cross-env NODE_ENV=production node src/server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --passWithNoTests",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "express",
    "template",
    "starter",
    "cookiecutter"
  ],
  "author": "arman-sharker",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "helmet": "^7.1.0",
    "http-errors": "^2.0.0",
    "joi": "^17.13.3",
    "morgan": "^1.10.0",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0"
  },
  "devDependencies": {
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "dotenv-cli": "^7.4.2",
    "cross-env": "^7.0.3",
    "husky": "^9.1.0"
  }
}
